{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "lib": ["ES2016"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".", 
    "paths": {
      "@/*": ["./src/*"]
    },
    
    "types": ["node"],
    "typeRoots": ["./node_modules/@types","./src/types/index.d.ts"],
    
  },
  "include": ["src", "express.d.ts"],
  "exclude": [
    "node_modules"
  ]
}
