{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "lib": ["ES2016"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".", 
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node", "@types/express"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
